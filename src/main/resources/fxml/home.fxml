<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.HomeController">
   <left>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="E-CookBook">
                     <font>
                        <Font name="System Italic" size="32.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <VBox>
                     <children>
                        <Button mnemonicParsing="false" text="Home">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  <Pane VBox.vgrow="ALWAYS" />
                  <VBox spacing="10.0">
                     <children>
                        <Label text="My Profile">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#openCreateRecipe" text="Add recipe" />
                        <Button mnemonicParsing="false" text="My recipes" />
                        <Button mnemonicParsing="false" onAction="#actionLogout" text="Logout" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </GridPane>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <HBox alignment="TOP_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField promptText="search..." />
                  <Button mnemonicParsing="false" text="Search" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="25.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets left="35.0" />
         </padding>
      </BorderPane>
   </center>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</BorderPane>
